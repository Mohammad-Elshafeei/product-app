<%- include("partials/header.ejs") -%>
    <div class="container">
        <div class="text-center text-danger mt-5 mb-3 h1">
            Products List
        </div>
        <% if(products.length > 0){ %>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Title</th>
                        <th scope="col">Image</th>
                        <th scope="col">Category</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Price</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach((product, index)=>{ %>
                        <tr>
                            <th scope="row">
                                <%= product.productID %>
                            </th>
                            <td>
                                <%= product.title %>
                            </td>
                            <td>
                                <img src="assets/images/<%= product.productID %>.<%= product.image.split('.')[1] %>" class="rounded-circle" width="50px" height="50px" alt="">
                            </td>
                            <td>
                                <%= product.category %>
                            </td>
                            <td>
                                <%= product.quantity %>
                            </td>
                            <td>
                                <%= product.price %>
                            </td>
                            <td>
                                <a href="/edit/<%= product.productID %>" target="_blanck" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= product.productID %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <% }else{ %>
                <div class="text-center">
                    No Products Found Please Click <a href="/add" style="text-decoration: none;">Here</a> To Add New Product.
                </div>
                <% } %>
    </div>