<%- include("partials/header.ejs") -%>
    <div class="container">
        <div class="float-right">
            <img src="../assets/images/<%= product.productID %>.<%= product.image.split('.')[1] %>" width="500px" height="500px" alt="">
        </div>
        <form action="" method="POST" enctype="multipart/form-data" class="mt-3">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="title" class="text-primary">Title: </label>
                    <input type="text" class="form-control" id="title" name="title" required autocomplete="on">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="categories" class="text-primary">Categories: </label>
                    <select class="form-control" id="category" name="category" required>
                        <option>IPhone</option>
                        <option>SAMSUNG</option>
                        <option>OPPO</option>
                        <option>Sony</option>
                        <option>Others</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="quantity" class="text-primary">Quantity: </label>
                    <input type="number" class="form-control" id="quantity" name="quantity" required autocomplete="on">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="price" class="text-primary">Price: </label>
                    <input type="number" class="form-control" id="price" name="price" required autocomplete="on">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="image" class="text-primary">Product's Image: </label>
                    <input type="file" class="form-control" id="image" name="image" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="description" class="text-primary">Description: </label>
                    <textarea cols="10" rows="5" class="form-control" id="description" name="description" required autocomplete="on"></textarea>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-outline-primary">Add New Product</button>
            </div>
        </form>
    </div>